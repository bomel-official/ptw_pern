{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "@constants": [
        "core/constants"
      ],
      "@controllers": [
        "controllers"
      ],
      "@core": [
        "core"
      ],
      "@db": [
        "db"
      ],
      "@error": [
        "error"
      ],
      "@libs": [
        "core/libs"
      ],
      "@middleware": [
        "middleware"
      ],
      "@types": [
        "core/types"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./**/*.spec.ts"
  ]
}
